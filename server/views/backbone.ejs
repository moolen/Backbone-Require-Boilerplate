<script>

      // Mobile/Desktop Detection script
      (function(ua, w, d, undefined) {

        // App Environment
        var production = false,
          // Configuration object that will contain the correct prod/dev CSS and JavaScript files to load
          config = {}
        w.addEventListener("DOMContentLoaded", function() {
          // Mobile/Tablet Logic
          if((/iPhone|iPod|iPad|Android|BlackBerry|Opera Mini|IEMobile/).test(ua)) {
            config = {
              "dev-css": ["<%= appUrl %>css/libs/jquery.mobile.css"],
              "prod-css": ["<%= appUrl %>css/libs/jquery.mobile.min.css"],
              "dev-js": [{ "data-main": "<%= appUrl %>js/app/config/MobileInit.js", "src": "<%= appUrl %>js/libs/require.js" }],
              "prod-js": ["<%= appUrl %>js/app/config/MobileInit.min.js"]
            };

          }

          // Desktop Logic
          else {
            config = {
              "dev-css": ["<%= appUrl %>css/libs/bootstrap.css"],
              "prod-css": ["<%= appUrl %>css/libs/bootstrap.min.css"],
              "dev-js": [{ "data-main": "<%= appUrl %>js/app/config/DesktopInit.js", "src": "<%= appUrl %>js/libs/require.js" }],
              "prod-js": ["<%= appUrl %>js/app/config/DesktopInit.min.js"]
            }

          }

          loadFiles(config, function() {

              loadFiles({
                "dev-css": ["<%= appUrl %>css/style.css"],
                "prod-css": ["<%= appUrl %>css/style.min.css"]
              });

          });

          function loadCSS(urls, callback) {

            var x, link;
            for(x = 0; x <= urls.length - 1; x += 1) {
              link = d.createElement("link");
              link.type = "text/css";
              link.rel = "stylesheet";
              link.href = urls[x];
              d.querySelector("head").appendChild(link);
            }

            if(callback) callback();

          }

          function loadJS(files, callback) {
            var x, script, file
            for(x = 0; x <= files.length - 1; x += 1) {
              file = files[x];
              script = d.createElement('script');
              if(((typeof file).toLowerCase()) === "object" && file["data-main"] !== undefined) {
                script.setAttribute("data-main", file["data-main"]);
                script.src = file.src;
              }

              else {
                script.src = file;
              }
              d.body.appendChild(script);
            }
            if(callback) callback();
          }

          function loadFiles(obj, callback) {
            if(production) {
              loadCSS(obj["prod-css"], function() {
                if(obj["prod-js"]) {
                  loadJS(obj["prod-js"], callback);
                }
              });
            }
            else {
              loadCSS(obj["dev-css"], function() {
                if(obj["dev-js"]) {
                  loadJS(obj["dev-js"], callback);
                }
              });
            }
          }
        }, false);

      })(navigator.userAgent || navigator.vendor || window.opera, window, window.document);

  </script>